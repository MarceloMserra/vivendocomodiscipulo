                        <span class="mr-2 text-lg">ðŸ“…</span> Leitura BÃ­blica Anual
                    </p>
                    <div id="modalAnnualLinks" class="flex flex-wrap gap-2"></div>
                </div>

                <button id="modalCheckBtn" onclick="toggleReadModal()" class="w-full py-4 rounded-xl border-2 border-gray-300 text-gray-500 font-bold mb-8 flex items-center justify-center gap-2 hover:bg-white transition">
                    <span class="check-icon text-2xl">â—‹</span> Marcar como Lido
                </button>

                <div class="bg-white p-6 rounded-3xl shadow-sm border border-gray-200">
                    <h3 class="font-bold text-imbb-navy mb-4 flex items-center gap-2"><span>ðŸ’¬</span> ComunhÃ£o</h3>
                    <div id="modalQuestion" class="text-sm text-imbb-blue bg-blue-50 p-4 rounded-xl mb-6 italic font-medium border-l-4 border-imbb-blue"></div>
                    <div id="modalCommentsList" class="space-y-4 mb-6"></div>
                    <form action="/comentar" method="POST" class="flex gap-2">
                        <input type="hidden" name="boletimId" value="{{data.uid}}">
                        <input type="hidden" name="devocionalIndex" id="modalIndexInput">
                        <input type="hidden" name="userUid" class="input-user-uid">
                        <input type="hidden" name="userPgm" class="input-user-pgm">
                        <input type="hidden" name="nome" class="input-user-name">
                        <input name="texto" placeholder="Compartilhe sua reflexÃ£o..." required class="flex-1 bg-gray-50 rounded-full px-4 py-3 text-sm outline-none border border-gray-200 focus:border-imbb-blue transition">
                        <button type="submit" class="bg-imbb-navy text-white w-12 h-12 rounded-full flex items-center justify-center shadow-lg hover:scale-110 transition">âž¤</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="newsModal" class="fixed inset-0 z-[60] hidden items-center justify-center bg-black/60 backdrop-blur-sm p-4">
        <div class="bg-white w-full max-w-sm rounded-2xl p-6 shadow-2xl relative animate-bounce-in">
            <button onclick="document.getElementById('newsModal').classList.add('hidden')" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">âœ•</button>
            <h3 id="newsModalTitle" class="text-xl font-serif font-bold text-imbb-navy mb-4 pr-6"></h3>
            <div id="newsModalContent" class="text-gray-600 text-sm leading-relaxed max-h-[60vh] overflow-y-auto font-sans text-justify"></div>
        </div>
    </div>

{{else}}
    <div class="glass-panel p-8 rounded-3xl text-center mt-20 mx-2">
        <h2 class="text-xl font-bold text-white">Carregando...</h2>
    </div>
{{/if}}

<script>
    // CARROSSEL AUTOMÃTICO
    let carouselInterval;
    const carousel = document.getElementById('newsCarousel');
    
    function startCarousel() {
        if(!carousel) return;
        carouselInterval = setInterval(() => {
            // Se chegou no fim, volta pro comeÃ§o
            if (carousel.scrollLeft + carousel.clientWidth >= carousel.scrollWidth) {
                carousel.scrollTo({ left: 0, behavior: 'smooth' });
            } else {
                // Rola a largura de um card (280px + 16px gap)
                carousel.scrollBy({ left: 300, behavior: 'smooth' });
            }
        }, 3500); // 3.5 segundos
    }

    function pauseCarousel() { clearInterval(carouselInterval); }
    function resumeCarousel() { startCarousel(); }

    // Inicia quando carregar
    document.addEventListener('DOMContentLoaded', startCarousel);

    // RESTO DOS SCRIPTS (MODAL, CHECK, ETC)
    let currentDevocionalId = null;

    function openModal(title, content) {
        document.getElementById('newsModalTitle').innerText = title;
        document.getElementById('newsModalContent').innerText = content;
        document.getElementById('newsModal').classList.remove('hidden');
        document.getElementById('newsModal').classList.add('flex');
    }

    function openReader(index, data) {
        currentDevocionalId = 'card-' + index;
        const modal = document.getElementById('readerModal');
        const card = document.getElementById('readerCard');
        
        document.getElementById('modalDate').innerText = data.cabecalho_dia || data.dia_semana;
        document.getElementById('modalTitle').innerText = data.titulo;
        document.getElementById('modalText').innerHTML = data.conteudo.replace(/\n/g, '<br><br>');
        
        const questionBox = document.getElementById('modalQuestion');
        if(data.pergunta_reflexao) { questionBox.innerText = data.pergunta_reflexao; questionBox.classList.remove('hidden'); } 
        else { questionBox.classList.add('hidden'); }

        const verseLink = document.getElementById('modalBibleLink');
        verseLink.href = `https://www.bibliaonline.com.br/nvi/busca?q=${encodeURIComponent(data.texto_base)}`;
        verseLink.innerHTML = `ðŸ“– Ler ${data.texto_base}`;

        const annualBox = document.getElementById('modalAnnualBox');
        const annualLinks = document.getElementById('modalAnnualLinks');
        if (data.leitura_anual) {
            annualBox.classList.remove('hidden');
            annualLinks.innerHTML = '';
            data.leitura_anual.split(/[,;]/).forEach(ref => {
                const cleanRef = ref.trim().replace(/\.$/, '');
                if(cleanRef.length > 2) {
                    annualLinks.innerHTML += `<a href="https://www.bibliaonline.com.br/nvi/busca?q=${encodeURIComponent(cleanRef)}" target="_blank" class="px-3 py-2 bg-white text-green-700 text-xs font-bold border border-green-200 rounded-lg hover:bg-green-50">${cleanRef} â†—</a>`;
                }
            });
        } else { annualBox.classList.add('hidden'); }

        const commentsDiv = document.getElementById('modalCommentsList');
        commentsDiv.innerHTML = '';
        if (data.comentarios && data.comentarios.length > 0) {
            data.comentarios.forEach(c => {
                commentsDiv.innerHTML += `<div class="text-sm bg-gray-50 p-3 rounded-xl border border-gray-100"><div class="flex justify-between"><span class="font-bold text-imbb-navy text-xs">${c.nome}</span>${canDelete(c) ? `<form action="/comentario/delete" method="POST" onsubmit="return confirm('Apagar?')"><input type="hidden" name="commentId" value="${c.id}"><button class="text-red-400">âœ•</button></form>` : ''}</div><p class="text-gray-600 mt-1">${c.texto}</p></div>`;
            });
        } else { commentsDiv.innerHTML = '<p class="text-xs text-gray-400 text-center italic">Seja o primeiro a comentar!</p>'; }

        document.getElementById('modalIndexInput').value = index;
        updateModalCheckButton();
        modal.classList.remove('hidden');
        setTimeout(() => card.classList.remove('translate-y-full'), 10);
    }

    function closeReader() {
        const modal = document.getElementById('readerModal');
        const card = document.getElementById('readerCard');
        card.classList.add('translate-y-full');
        setTimeout(() => modal.classList.add('hidden'), 300);
    }

    function canDelete(comment) {
        const myUid = localStorage.getItem('userUid');
        const myRole = localStorage.getItem('userRole');
        return (comment.authorUid === myUid || myRole === 'admin');
    }

    function updateModalCheckButton() {
        const btn = document.getElementById('modalCheckBtn');
        const isRead = localStorage.getItem(currentDevocionalId) === 'true';
        if (isRead) {
            btn.className = "w-full py-4 rounded-xl bg-green-500 text-white font-bold mb-8 flex items-center justify-center gap-2 shadow-lg";
            btn.innerHTML = '<span>âœ“</span> Leitura ConcluÃ­da';
        } else {
            btn.className = "w-full py-4 rounded-xl border-2 border-gray-300 text-gray-500 font-bold mb-8 flex items-center justify-center gap-2 hover:bg-white transition";
            btn.innerHTML = '<span>â—‹</span> Marcar como Lido';
        }
        const idx = currentDevocionalId.split('-')[1];
        const prev = document.getElementById(`preview-check-${idx}`);
        if(prev) {
            if(isRead) { prev.classList.add('bg-green-500', 'border-none', 'text-white'); prev.innerText='âœ“'; }
            else { prev.classList.remove('bg-green-500', 'border-none', 'text-white'); prev.innerText=''; }
        }
    }

    function toggleReadModal() {
        const isRead = localStorage.getItem(currentDevocionalId) === 'true';
        if (isRead) localStorage.removeItem(currentDevocionalId); else localStorage.setItem(currentDevocionalId, 'true');
        updateModalCheckButton();
    }

    document.addEventListener('DOMContentLoaded', () => {
        const uid = localStorage.getItem('userUid');
        const name = localStorage.getItem('userName');
        document.querySelectorAll('.input-user-uid').forEach(el => el.value = uid);
        document.querySelectorAll('.input-user-name').forEach(el => el.value = name);
        document.querySelectorAll('.btn-check-preview').forEach(el => {
            const idx = el.id.split('-')[2];
            if(localStorage.getItem(`card-${idx}`) === 'true') { el.classList.add('bg-green-500', 'border-none', 'text-white'); el.innerText='âœ“'; }
        });
    });
</script>